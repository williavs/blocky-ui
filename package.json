{
  "name": "blocky-ui",
  "version": "0.1.0",
  "description": "A playful, modern design system with bold borders and crisp shadows",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/style.css",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "npm run build:css && tsc --project tsconfig.lib.json",
    "build:css": "tailwindcss -i src/index.css -o dist/style.css",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0.9.0",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/rollup": "^3.1.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "tailwindcss",
    "typescript"
  ],
  "author": "William Van Sickle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williavs/blocky-ui.git"
  },
  "bugs": {
    "url": "https://github.com/williavs/blocky-ui/issues"
  },
  "homepage": "https://github.com/williavs/blocky-ui#readme",
  "publishConfig": {
    "access": "public"
  }
}
